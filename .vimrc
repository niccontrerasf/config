# Disable paste mode to prevent auto-indentation issues when pasting code.
setlocal nopaste

# Disable mouse support for the current buffer to avoid accidental selections.
setlocal mouse-=a

# Set format options to disable automatic text formatting features.
setlocal formatoptions=tnq

# Disable automatic indentation.
setlocal noautoindent

# Disable C-style indentation.
setlocal nocindent

# Disable smart indentation.
setlocal nosmartindent

# Clear the indent expression.
setlocal indentexpr=

# Set the color scheme to "desert".
color desert
"color ron

# Enable syntax highlighting.
syntax on

